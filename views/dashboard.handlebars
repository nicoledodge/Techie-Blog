<h1>Your Dashboard</h1>

<section class="justify-content-center">
    {{#each posts as |post|}}
            <div class="card col-6 no-padding" >
                <a href="/post/{{id}}" class="text-decoration-none">
                    <div class="card-header">
                        <h3>{{title}}</h3>
                        <p>Posted by {{user.username}} on {{format_time createdAt}}</p>
                    </div>
                    <div class="card-body">
                        <p>{{content}}</p>
                    </div>
                </a>

            </div>
    {{/each}}
</section>

<a href="/postform">add post</a>
<script src="/js/dashboard.js"></script>